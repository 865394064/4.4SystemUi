<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_height="wrap_content"
	 android:layout_width="match_parent"         			 			 
	 android:orientation="vertical">
         <LinearLayout         
         android:id="@+id/calendar_notifations_event_item_view" 
         android:layout_height="17dp"
	 android:layout_width="match_parent"
         android:layout_marginLeft="12dp"			 			 
	 android:orientation="horizontal">
		 <LinearLayout 
			 android:id="@+id/calendar_notifations_event_time_view"
			 android:layout_height="match_parent"
			 android:layout_width="55dp"
		         android:layout_marginRight="5dp"
			 android:gravity="center"			 			 
			 android:orientation="vertical"
		         android:visibility="gone">
			 <TextView 
			     android:id="@+id/calendar_notifations_event_start_time"
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:gravity="center_vertical|right"	
			     android:text="@string/no_events"
			     android:textColor="@color/calendar_event_time_text_color"
			     android:textSize="11sp" />
			 <TextView 
			     android:id="@+id/calendar_notifations_event_end_time"
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
		             android:layout_marginTop="3dip"
			     android:gravity="center_vertical|right"	
			     android:text="@string/no_events"
			     android:textColor="@color/calendar_event_time_text_color"
			     android:textSize="11sp" />     
		</LinearLayout> 	 
		 <ImageView 
		      android:layout_width="10dp"
		      android:layout_height="match_parent" 
		      android:background="@drawable/calendar_line"/> 			  
		 <TextView 
		      android:id="@+id/calendar_notifations_event_content"
		      android:layout_width="wrap_content"
		      android:layout_height="match_parent"
                      android:layout_marginRight="3dip" 
		      android:singleLine="true"                     				   
		      android:text="@string/no_events"
		      android:textColor="@color/calendar_event_text_color"
		      android:textSize="13sp" />
       </LinearLayout>
       <ImageView
              android:id="@+id/calendar_notifations_event_divide" 
	      android:layout_width="match_parent"
	      android:layout_height="1px"
	      android:layout_marginLeft="10dip" 
	      android:background="@color/divide_line_color"
              android:visibility="gone"/>  
</LinearLayout>
