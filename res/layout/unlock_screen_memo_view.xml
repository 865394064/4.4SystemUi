<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.phone.AppPreviewMemo xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="346dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="7dp"
    android:orientation="vertical"
    android:background="@drawable/unlock_screen_app_content_view_background" >
    <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:background="@drawable/unlock_screen_app_content_view_background_top" >
           <ImageView 
	         android:layout_width="18dp"
	         android:layout_height="18dp"
	         android:layout_marginLeft="6dip"
	         android:layout_alignParentLeft="true"
	         android:layout_centerVertical="true"
	         android:src="@drawable/app_memo"/>
            <TextView 
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
		   android:layout_marginLeft="30dip"
	         android:layout_alignParentLeft="true"
		   android:layout_centerVertical="true"
		   android:text="@string/app_memo"
		   android:textColor="@color/app_name_color"
		   android:textSize="12sp" 
		            />
             <TextView 
                 android:id="@+id/memo_expand_or_hide"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignParentRight="true"
		   android:layout_marginRight="15dip"
		   android:layout_centerVertical="true"
		   android:text="@string/siri_suggest_expand"
		   android:textColor="@color/app_name_color"
		   android:textSize="12sp" 
                  />
     </RelativeLayout >
     
     <LinearLayout 
              android:id="@+id/memo_content_view"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:minHeight="97dp"
		android:orientation="vertical"
		android:background="#10ffffff"
		>
		<TextView 
                 android:id="@+id/memo_empty_content_text"
	          android:layout_width="match_parent"
	          android:layout_height="77dp"
	          android:gravity="center" 
		   android:text="@string/app_no_memo"
		   android:textColor="@color/gray_text_color"
		   android:textSize="15sp" />
		<ImageView
	              android:id="@+id/memo_content_divide" 
		      android:layout_width="match_parent"
		      android:layout_height="1px" 
		      android:background="@color/divide_line_color"
	              />  
		<LinearLayout
                  android:id="@+id/memo_content_list"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginLeft="15dip"
	          android:layout_marginRight="15dip"
	          android:orientation="vertical"
		/>
		<LinearLayout
                  android:id="@+id/memo_edit_view"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:paddingTop="5dip"
	          android:paddingBottom="5dip"
	          android:orientation="horizontal"
	          android:visibility="gone"
		> 
			<ImageView
	                  android:id="@+id/new_memo_edit"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_marginLeft="40dp"
		          android:background="@drawable/memo_edit"
			/>
			<ImageView
	                  android:id="@+id/new_memo_selected"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_marginLeft="40dp"
		          android:background="@drawable/memo_selected"
			/>
			<ImageView
	                  android:id="@+id/new_memo_camera"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_marginLeft="40dp"
		          android:background="@drawable/memo_camera"
			/>
			<ImageView
	                  android:id="@+id/new_memo_draw"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_marginLeft="40dp"
		          android:background="@drawable/memo_draw"
			/>
		</LinearLayout>
     </LinearLayout>	
    
</com.android.systemui.statusbar.phone.AppPreviewMemo>
