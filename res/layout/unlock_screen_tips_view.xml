<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="346dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="7dp"
    android:orientation="vertical"
    android:background="@drawable/unlock_screen_app_content_view_background" >
    <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:background="@drawable/unlock_screen_app_content_view_background_top" >
           <ImageView 
	         android:layout_width="18dp"
	         android:layout_height="18dp"
	         android:layout_marginLeft="6dip"
	         android:layout_alignParentLeft="true"
	         android:layout_centerVertical="true"
	         android:src="@drawable/tip_icon"/>
            <TextView 
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
		   android:layout_marginLeft="30dip"
	         android:layout_alignParentLeft="true"
		   android:layout_centerVertical="true"
		   android:text="@string/app_name_tip"
		   android:textColor="@color/app_name_color"
		   android:textSize="12sp" 
		            />
             <TextView   
                 android:id="@+id/tips_expand_or_hide"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignParentRight="true"
		   android:layout_marginRight="15dip"
		   android:layout_centerVertical="true"
		   android:text="@string/siri_suggest_expand"
		   android:textColor="@color/app_name_color"
		   android:textSize="12sp"
                   android:visibility="gone" />
     </RelativeLayout >
     
     <LinearLayout 
              android:id="@+id/tips_empty_content_view"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:minHeight="97dp"
		android:orientation="vertical"
		android:gravity="center"
		android:background="#10ffffff"
		>
		<TextView 
                 android:id="@+id/tips_empty_content_text"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginLeft="15dip"
	          android:layout_marginRight="15dip"
	          android:gravity="center" 
		   android:text="@string/unavailable"
		   android:textColor="@color/gray_text_color"
		   android:textSize="15sp" />
     </LinearLayout>	
     
</LinearLayout>
