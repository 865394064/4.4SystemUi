<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/screen_mirroring_control_force_touch_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="31dp"
    android:layout_marginRight="31dp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical" 
    android:visibility="gone"
    android:background="@drawable/bottom_panel_force_touch_view_background">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <ImageView 
	        android:layout_width="@dimen/control_center_child_view_width"
	        android:layout_height="@dimen/control_center_child_view_width"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/iphone_airplay"/>
	    <TextView	            
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="50dp"
	        android:textColor="#fff"
	        android:textSize="14sp"
	        android:textStyle="bold"
	        android:text="@string/iphone_airplay_text" />
    </RelativeLayout>
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#fff"/>
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="#fff"/> 
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="#fff"/> 
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="#fff"/> 
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:background="#fff"/>
    <TextView	            
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#fff"
        android:textSize="14sp"      
        android:text="@string/iphone_stop_airplay_text" />     	 
</LinearLayout>