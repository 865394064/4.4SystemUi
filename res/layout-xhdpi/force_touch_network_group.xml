<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:id="@+id/network_group_force_touch_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="31dp"
    android:layout_marginRight="31dp"
    android:paddingTop="45dp"
    android:paddingBottom="45dp"
    android:layout_centerInParent="true"
    android:orientation="vertical" 
    android:visibility="gone"
    android:background="@drawable/bottom_panel_force_touch_view_background">
    <!--the first row-->
    <LinearLayout        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        >
        <LinearLayout        
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_horizontal">
	        <ImageView
	            android:id="@+id/airplane_mode_force_touch"
	            android:layout_width="57dp"
	            android:layout_height="57dp"	            	            
	            android:src="@drawable/iphone_airplane_mode_off" />
	        <TextView
	            android:id="@+id/airplane_mode_force_touch_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#fff"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:text="@string/control_center_airplane_mode_off"/>
	    </LinearLayout>
	    <LinearLayout        
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_horizontal">
	        <ImageView
	            android:id="@+id/mobile_network_iv_force_touch"
	            android:layout_width="57dp"
	            android:layout_height="57dp"	            	            
	            android:src="@drawable/iphone_mobile_network_off" />
	        <TextView
	            android:id="@+id/mobile_network_iv_force_touch_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#fff"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:text="@string/control_center_cellular_data_off"/>
	    </LinearLayout>
	</LinearLayout>
	<!--the second row-->   
    <LinearLayout        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        >
        <LinearLayout        
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_horizontal">
	        <ImageView
	            android:id="@+id/wifi_force_touch"
	            android:layout_width="57dp"
	            android:layout_height="57dp"	            	            
	            android:src="@drawable/iphone_wifi_off" />
	        <TextView
	            android:id="@+id/wifi_force_touch_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#fff"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:text="@string/control_center_wlan_not_connected"/>
	    </LinearLayout>
	    <LinearLayout        
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_horizontal">
	        <ImageView
	            android:id="@+id/bluetooth_force_touch"
	            android:layout_width="57dp"
	            android:layout_height="57dp"	            	            
	            android:src="@drawable/iphone_bluetooth_off" />
	        <TextView
	            android:id="@+id/bluetooth_force_touch_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#fff"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:text="@string/control_center_bluetooth_off"/>
	    </LinearLayout>
	</LinearLayout>
	<!--the third row-->   
    <LinearLayout        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout        
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_horizontal">
	        <ImageView
	            android:id="@+id/airdrop_receiving_force_touch"
	            android:layout_width="57dp"
	            android:layout_height="57dp"	            	            
	            android:src="@drawable/control_center_child_airdrop_off" />
	        <TextView
	            android:id="@+id/airdrop_receiving_force_touch_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#fff"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:text="@string/control_center_airdrop_receiving_off"/>
	    </LinearLayout>
	    <LinearLayout        
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_horizontal">
	        <ImageView
	            android:id="@+id/personal_hotspot_force_touch"
	            android:layout_width="57dp"
	            android:layout_height="57dp"	            	            
	            android:src="@drawable/control_center_child_personal_hotspot_off" />
	        <TextView
	            android:id="@+id/personal_hotspot_force_touch_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#fff"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:text="@string/control_center_personal_hotspot_off"/>
	    </LinearLayout>
	</LinearLayout>     
</LinearLayout>